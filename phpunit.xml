<?xml version="1.0" encoding="UTF-8"?>
<phpunit colors="true">
    <testsuites>
        <testsuite name="test_default">
            <directory>./Tests</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist processUncovereredFilesFromWhitelist="true">
            <directory suffix=".php">public/</directory>
        </whitelist>
    </filter>
    <php>
        <ini name="display_errors" value="true"/>
        <ini name="display_startup_errors" value="true"/>
        <ini name="error_reporting" value="E_ALL | E_STRICT"/>
    </php>
</phpunit>